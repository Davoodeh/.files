#!/bin/sh
# This is bound to Shift+PrintScreen by default, requires maim. It lets you
# choose the kind of screenshot to take, including copying the image or even
# highlighting an area to copy. scrotcucks on suicidewatch right now.
# Pass -i to take an immediate screenshot without prompting dmenu.

# Timestamp format
tsf="${TSF:-%y%m%d-%a-%H%M%S}"
dir="${XDG_PICTURES_DIR:-$HOME}"
cb(){ xclip -selection clipboard -t image/png ;}

[ "$1" = "-i" ] && maim -u "$dir/pic-full-$(date "+$TSF").png" | cb ||
	case "$(printf "a selected area\\ncurrent window\\nfull screen\\na selected area (no save)\\ncurrent window (no save)\\nfull screen (no save)" | dmenu -l 6 -i -p "Screenshot which area?")" in
		"a selected area") maim -s "$dir/pic-selected-$(date "+$tsf").png" | cb ;;
		"current window") maim -i "$(xdotool getactivewindow)" "$dir/pic-window-$(date "+$tsf").png" | cb ;;
		"full screen") "$(basename "$0")" -i ;;
		"a selected area (no save)") maim -s | cb ;;
		"current window (no save)") maim -i "$(xdotool getactivewindow)" | cb ;;
		"full screen (no save)") maim -u | cb ;;
	esac
