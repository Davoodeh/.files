#!/bin/sh

# Shows the current moon phase.

moonfile="${XDG_DATA_HOME:-$HOME/.local/share}/moonphase"
[ "$(stat -c %y "$moonfile" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] ||
    { curl -sf "wttr.in/?format=%m" >"$moonfile" || exit 1; }

icon="$(ico $(cat "$moonfile"))" || icon="?"
echo "$icon"

case $BLOCK_BUTTON in
    3) notify-send "$(ico ðŸŒ˜) Moon phase module" "Displays current moon phase.
- $(ico ðŸŒ‘): New
- $(ico ðŸŒ’): Waxing Crescent
- $(ico ðŸŒ“): First Quarter
- $(ico ðŸŒ”): Waxing Gibbous
- $(ico ðŸŒ•): Full
- $(ico ðŸŒ–): Waning Gibbous
- $(ico ðŸŒ—): Last Quarter
- $(ico ðŸŒ˜): Waning Crescent" ;;
    6) editor "$0" ;;
esac
