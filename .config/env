    *.R=ðŸ“Š:*.rmd=ðŸ“Š:*.Rmd=ðŸ“Š:*.m=ðŸ“Š:*.mp3=ðŸŽµ:*.opus=ðŸŽµ:*.ogg=ðŸŽµ:*.m4a=ðŸŽµ:*.flac=ðŸŽ¼:*.mkv=ðŸŽ¥:*.mp4=ðŸŽ¥:*.webm=ðŸŽ¥:*.mpeg=ðŸŽ¥:*.avi=ðŸŽ¥:*.zip=ðŸ“¦:*.rar=ðŸ“¦:\
    *.7z=ðŸ“¦:*.tar.gz=ðŸ“¦:*.z64=ðŸŽ®:*.v64=ðŸŽ®:*.n64=ðŸŽ®:*.gba=ðŸŽ®:*.nes=ðŸŽ®:*.gdi=ðŸŽ®:*.1=â„¹:*.nfo=â„¹:*.info=â„¹:*.log=ðŸ“™:*.iso=ðŸ“€:*.img=ðŸ“€:*.bib=ðŸŽ“:*.ged=ðŸ‘ª:\
    *.part=ðŸ’”:*.torrent=ðŸ”½:*.jar=â™¨:*.java=â™¨:"
export LF_ICONS

LESS=-R
LESSOPEN="| /usr/bin/highlight -O ansi %s 2>/dev/null"
LESS_TERMCAP_mb="$(printf '%b' '[1;31m')"
LESS_TERMCAP_md="$(printf '%b' '[1;36m')"
LESS_TERMCAP_me="$(printf '%b' '[0m')"
LESS_TERMCAP_se="$(printf '%b' '[0m')"
LESS_TERMCAP_so="$(printf '%b' '[01;44;33m')"
LESS_TERMCAP_ue="$(printf '%b' '[0m')"
LESS_TERMCAP_us="$(printf '%b' '[1;32m')"
export LESS LESSOPEN LESS_TERMCAP_mb LESS_TERMCAP_md LESS_TERMCAP_me LESS_TERMCAP_se LESS_TERMCAP_so LESS_TERMCAP_ue LESS_TERMCAP_us
